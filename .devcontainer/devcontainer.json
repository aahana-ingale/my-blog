{
    "name": "Hugo Blog (Extended)",
    "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
    "features": {
        "ghcr.io/devcontainers/features/hugo:1": {
            "extended": true
        }
    },
    "forwardPorts": [1313],
    "portsAttributes": {
        "1313": {
            "label": "Hugo Dev Server",
            "onAutoForward": "openBrowser"
        }
    },
    "postCreateCommand": "sudo apt-get update && sudo apt-get install -y build-essential"
    // "postStartCommand": "nohup hugo server -D --bind 0.0.0.0 --disableFastRender > hugo.log 2>&1 &"
}
